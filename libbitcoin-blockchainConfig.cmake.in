# - Config file for the LIBBITCOIN_BLOCKCHAIN package
#
#  LIBBITCOIN_BLOCKCHAIN_INCLUDE_DIRS - include directories for LIBBITCOIN_BLOCKCHAIN
#  LIBBITCOIN_BLOCKCHAIN_LIBRARIES    - libraries to link against

get_filename_component(LIBBITCOIN_BLOCKCHAIN_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
set(LIBBITCOIN_BLOCKCHAIN_INCLUDE_DIRS "@CONF_INCLUDE_DIRS@")

include("${LIBBITCOIN_BLOCKCHAIN_CMAKE_DIR}/libbitcoin-blockchainTargets.cmake")
set(LIBBITCOIN_BLOCKCHAIN_LIBRARIES libbitcoin-blockchain)

find_package(libbitcoin-database 3.0.0 REQUIRED)

get_target_property(
  _compile_definitions
  libbitcoin-blockchain INTERFACE_COMPILE_DEFINITIONS)
if ("WITH_CONSENSUS" IN_LIST _compile_definitions)
  find_package(libbitcoin-consensus 2.0.0 REQUIRED)
endif()
